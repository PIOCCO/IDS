<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.AlertsController"
      styleClass="content-view"
      spacing="20">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Header -->
    <HBox styleClass="page-header" alignment="CENTER_LEFT" spacing="15">
        <Label text="Security Alerts" styleClass="page-title"/>
        <Label text="Monitor and manage security incidents" styleClass="page-subtitle"/>
    </HBox>

    <!-- Filters and Actions -->
    <HBox spacing="15" alignment="CENTER_LEFT" styleClass="filter-bar">
        <Label text="Filter by Severity:" styleClass="filter-label"/>
        <ComboBox fx:id="severityFilter" prefWidth="150" styleClass="filter-combo"/>

        <TextField fx:id="searchField" promptText="Search alerts..." prefWidth="250" styleClass="search-field"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Button fx:id="refreshBtn" text="ðŸ”„ Refresh" styleClass="action-button"/>
        <Button text="ðŸ“¥ Export" styleClass="action-button"/>
    </HBox>

    <!-- Alerts Table -->
    <VBox styleClass="table-container" VBox.vgrow="ALWAYS">
        <TableView fx:id="alertsTable" styleClass="data-table" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="100"/>
                <TableColumn fx:id="severityColumn" text="Severity" prefWidth="100"/>
                <TableColumn fx:id="typeColumn" text="Type" prefWidth="150"/>
                <TableColumn fx:id="sourceColumn" text="Source IP" prefWidth="130"/>
                <TableColumn fx:id="destinationColumn" text="Destination IP" prefWidth="130"/>
                <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="250"/>
                <TableColumn fx:id="timestampColumn" text="Timestamp" prefWidth="180"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
            </columns>
        </TableView>
    </VBox>

</VBox>
